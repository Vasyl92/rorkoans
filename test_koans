!/bin/bash
clear
echo "Hi, $USER"
rspec spec/requests/main_tests_spec.rb --format progress --format documentation --out rspec.txt
INFO="$(tail -4 "rspec.txt")"
VALUE=" 0 failures"
TESNUMBER=${INFO:0:2}
echo
if [[ $INFO =~ .*$VALUE.* ]];
then
echo  "You have passed test number $TESNUMBER"
sleep 3
git add --all
git reset --hard HEAD
git checkout test2
else
echo "YOU DONT PASSED all tests please try again"
git add --all
git reset --hard HEAD
fi
echo